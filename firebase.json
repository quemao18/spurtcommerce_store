{
  "hosting": {
    "public": "dist/browser",
    "site": "decasta-store",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
      "headers": [ {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [ {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        } ]
      }, {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=7200"
        } ]
      }, {
        "source": "404.html",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=300"
        } ]
      } ]
  }
}
